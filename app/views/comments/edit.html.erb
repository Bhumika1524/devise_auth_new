<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>
<% if @comment.present? %>
<%= form_for @comment, url: post_comment_path(@post.id, @comment.id) do |f| %>
    <%= f.label :description, "Comment" %>
    <br/>
    <%= f.text_field :description %>

    <br/>
    <%= f.submit %>
  <% end %>
<% else %>
<h2>Record not found</h2>
<% end %>